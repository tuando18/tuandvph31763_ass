<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEDDE"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Authentication.Forgot_password_activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Quên mật khẩu"
        android:textColor="#130f40"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:text="Bạn cần nhập lại tên đăng nhập và email"
        android:textColor="#F80000"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/edt_username_forgotpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/textviewshape"
        android:drawableRight="@drawable/ic_person"
        android:hint="@string/txt_tendangnhap"
        android:inputType="textPersonName"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edt_email_forgotpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/textviewshape"
        android:drawableRight="@drawable/ic_email"
        android:hint="@string/txt_email"
        android:inputType="textEmailAddress"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_no_forgotpass"
            android:layout_width="140dp"
            android:layout_height="55sp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#b2bec3"
            android:text="Hủy"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_yes_forgotpass"
            android:layout_width="140dp"
            android:layout_height="55sp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="#E74C3C"
            android:text="Xác nhập"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>